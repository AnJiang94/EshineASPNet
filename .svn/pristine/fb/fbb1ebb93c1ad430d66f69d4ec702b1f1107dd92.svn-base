    protected void Page_Load(object sender, EventArgs e)
    {
        if (Session["Companycode"] == null || Session["Companycode"] == "")
        {
            Response.Redirect("login2.aspx", true);
        }
        //Session["Companycode"] = "2351234";
        getpercent();
