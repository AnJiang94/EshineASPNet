.tile{background:#fff;border:1px solid #ddd;padding:40px;box-sizing:border-box;-moz-box-sizing:border-box}
.tile:before,.tile:after{content:" ";display:table}
.tile:after{clear:both}
h1,h2,h3,h4{font-family:"Gotham SSm A","Gotham SSm B","Helvetica Neue",Helvetica,Calibri,Arial,clean,sans-serif;font-weight:normal}
h1 a,h2 a,h3 a,h4 a{color:inherit}
h1{font-size:30px;font-weight:500;line-height:28px}
h2{font-size:30px;font-weight:500;line-height:28px}
h3{font-size:20px;font-weight:400;line-height:24px;margin-bottom:10px}
h4{color:#666;font-size:18px;font-weight:400;line-height:24px}
input[type="text"],input[type="tel"],input[type="email"],input[type="password"]{background:#eee;border:2px solid #eee;border-radius:2px;box-sizing:border-box;height:36px;margin:0;padding:0;text-indent:7px;width:100%;-webkit-appearance:none}
input[type="text"]:focus,input[type="tel"]:focus,input[type="email"]:focus,input[type="password"]:focus{border-color:#ccc;box-shadow:none;outline:none}
input[type="text"]:hover,input[type="tel"]:hover,input[type="email"]:hover,input[type="password"]:hover{border-color:#ccc}
input[type="text"].quarter,input[type="tel"].quarter,input[type="email"].quarter,input[type="password"].quarter{width:22%}
input[type="text"].half,input[type="tel"].half,input[type="email"].half,input[type="password"].half{width:48%}
input[type="text"].three_quarters,input[type="tel"].three_quarters,input[type="email"].three_quarters,input[type="password"].three_quarters{width:74%}

.button{border:2px solid;border-radius:2px;cursor:pointer;display:inline-block;font-weight:600;font-size:12px;font-family:"Gotham SSm A","Gotham SSm B","Helvetica Neue",Helvetica,Calibri,Arial,clean,sans-serif;line-height:22px;padding:5px 8px;text-align:center;text-transform:none;-webkit-appearance:none;-webkit-font-smoothing:antialiased}
.blue_button,a.blue_button{background:#6c98cf;border-color:#6c98cf;color:#fff}
.blue_button:hover,a.blue_button:hover{background:#384862;border-color:#384862;color:#fff}
.blue_button:active,a.blue_button:active{background:#2e3c52;border-color:#2e3c52;color:#fff}

.bluedark_button,a.bluedark_button{background:#384d93;border-color:#384d93;color:#fff}
.bluedark_button:hover,a.bluedark_button:hover{background:#384862;border-color:#384862;color:#fff}
.bluedark_button:active,a.bluedark_button:active{background:#2e3c52;border-color:#2e3c52;color:#fff}

.bluedark1_button,a.bluedark1_button{background:#6c98cf;border-color:#6c98cf;color:#ffffff;padding:0 15px; vertical-align:middle;  }
.bluedark1_button:hover,a.bluedark1_button:hover{background:#384862;border-color:#384862;color:#eeeeee}
.bluedark1_button:active,a.bluedark1_button:active{background:#2e3c52;border-color:#2e3c52;color:#eeeeee}

.red_button,a.red_button{background:#dc6e65;border-color:#dc6e65;color:#fff}
.red_button:hover,a.red_button:hover{background:#d75a50;border-color:#d75a50;color:#fff}
.red_button:active,a.red_button:active{background:#d3473b;border-color:#d3473b;color:#fff}
.white_button,a.white_button{background:#fff;border-color:#fff;color:#000;text-transform:uppercase;letter-spacing:1px}
.gray_button,a.gray_button{background:#ccc;border-color:#ccc;color:#fff}
.gray_button:hover,a.gray_button:hover{background:#bfbfbf;border-color:#bfbfbf;color:#fff}
.gray_button:active,a.gray_button:active{background:#b3b3b3;border-color:#b3b3b3;color:#fff}
.outline_button,a.outline_button{border-color:#fff;color:#fff;letter-spacing:1px;text-transform:uppercase;padding:8px 12px}
.outline_button:hover,.outline_button:active,a.outline_button:hover,a.outline_button:active{color:#fff}

.input{margin-bottom:10px}
.two_input_grouping:before,.two_input_grouping:after{content:" ";display:table}
.two_input_grouping:after{clear:both}
.two_input_grouping .input,.two_input_grouping .input.select{float:left;margin-left:4%;width:48%}
.two_input_grouping .input:first-child,.two_input_grouping .input.select:first-child{margin-left:0}
.three_input_grouping:before,.three_input_grouping:after{content:" ";display:table}
.three_input_grouping:after{clear:both}
.three_input_grouping .input,.three_input_grouping .input.select{float:left;margin-left:4%;width:30.66667%}
.three_input_grouping .input:first-child,.three_input_grouping .input.select:first-child{margin-left:0}
.four_input_grouping:before,.four_input_grouping:after{content:" ";display:table}
.four_input_grouping:after{clear:both}
.four_input_grouping .input,.four_input_grouping .input.select{float:left;margin-left:4%;width:22%}
.four_input_grouping .input:first-child,.four_input_grouping .input.select:first-child{margin-left:0}
.five_input_grouping:before,.five_input_grouping:after{content:" ";display:table}
.five_input_grouping:after{clear:both}
.five_input_grouping .input,.five_input_grouping .input.select{float:left;margin-left:4%;width:16.8%%}
.five_input_grouping .input:first-child,.five_input_grouping .input.select:first-child{margin-left:0}
textarea{width:100%;height:120px}
label{font-size:13px;font-weight:400;line-height:18px;margin-bottom:2px}
.input.select{float:left;position:relative;width:100%}
.input.select label{display:block}


#account{position:relative;text-align:left;width:100px; margin-top:-22px;}
#account:after{background-image:url(//trunkclub-assets.s3.amazonaws.com/site-assets/self-selection/common/esquire-icons.svg);background-position:-54px -12px;content:"";height:9px;margin-top:-4px;position:absolute;right:12px;top:50%;width:10px}
#account:hover #account_links{display:block}
#account.account_label:hover #account_links{display:block}
#account_links{border-radius:0 0 2px 2px;position:absolute;display:none;background:#546c92;right:-2px;top:33px;width:120px}
#account_links a{color:#fff;display:block;font-size:12px;padding:10px 10px 0 20px; width:100%; float:left; }
#account_links a:hover{background-color:#415472}
#account_links a:active{background-color:#2e3c52; width:100%;}
#account_links a:last-child{border-radius:0 0 2px 2px}